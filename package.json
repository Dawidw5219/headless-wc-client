{
  "name": "headless-wc-client",
  "version": "1.1.1",
  "description": "WooCommerce Headless Solution",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "import": "./dist/next.mjs",
      "require": "./dist/next.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "git": "git add . && git commit -m 'update' && git push origin main",
    "deploy": "npm run build && npm publish && npm run git",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dawidw5219/headless-wc-client.git"
  },
  "keywords": [
    "woocommerce",
    "wordpress",
    "ecommerce",
    "headless",
    "rest",
    "node",
    "typescript",
    "api"
  ],
  "author": "Dawid WiewiÃ³rski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Dawidw5219/headless-wc-client/issues"
  },
  "homepage": "https://github.com/Dawidw5219/headless-wc-client#readme",
  "peerDependencies": {
    "next": ">=14.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "tsup": "^8.0.2",
    "typedoc": "^0.25.9",
    "typescript": "^5.3.3"
  }
}
